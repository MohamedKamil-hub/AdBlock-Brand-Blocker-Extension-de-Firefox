{
  "manifest_version": 2,
  "name": "AdBlock & Brand Blocker",
  "version": "1.0.0",
  "description": "Bloqueador de anuncios y marcas espec√≠ficas para Firefox",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "AdBlock & Brand Blocker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "blocked.html"
  ]
}
